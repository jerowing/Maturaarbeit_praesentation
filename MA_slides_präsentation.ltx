\section{Kopfrechnen}

\subsection{Was ist Kopfrechnen?}

\begin{frame}{Definition Kopfrechnen}
 \huge Kopfrechnen ist, wenn ohne eine Notation von Zwischenschritten - unter Ausnutzung von Strategien - die Lösung einer Aufgabe im Kopf erfolgt \\[1cm]\centering \normalsize (nach Krauthausen \& Scherer)
\end{frame}
\begin{frame}{Definition Kopfrechnen}
 \huge Kopfrechnen ist, wenn ohne eine Notation von Zwischenschritten - \textcolor{red}{unter Ausnutzung von Strategien} - die Lösung einer Aufgabe im Kopf erfolgt \\[1cm]\centering \normalsize (nach Krauthausen \& Scherer)
\end{frame}%%

\subsection{Strategien}
\begin{frame}{Strategien}
	\begin{block}{Grundlagen}
	\begin{itemize}
		\item Mathematische Umformungen
		\item Vereinfachung des Rechenweges
		\item Vielseitig anwendbar
	\end{itemize}
	\end{block}
	
	\begin{block}{Ziel}
	Die Rechnung umformen, um möglichst einfach an das Resultat zu gelangen.
	\end{block}
\end{frame}

\begin{frame}{Strategien}
	\begin{block}{Funktionsweise}
	\begin{itemize}
		\item Rechenweg vereinfachen
		\item Schwieriges einfach machen
		\item Rechenregeln kennen, anwenden, ausnützen
		\item \alert{Mathematisch korrekt!}
	\end{itemize}
	\end{block}

	\begin{block}{Ziel}
		Einen möglichst einfachen Rechenweg kreieren.
	\end{block}
\end{frame}

\begin{frame}{Strategien}
	\begin{block}{Beispiele}
	\begin{itemize}
		\item Reihenfolge von Summanden bzw. Faktoren verändern
		\item Grosse Zahlen in kleinere aufteilen
		\item Unbekanntes durch Bekanntes ersetzen
	\end{itemize}
	\end{block}
\end{frame}

\begin{frame}{Strategien: Ein Beispiel}
\Huge
	\begin{equation*} 1000 - 852 = ? \end{equation*}
	\begin{equation*} 1000 - 753 = ? \end{equation*}
\end{frame}

\begin{frame}{Strategien: Ein Beispiel}
	\begin{block}{Subtraktion von 1000}
	Alle Stellen von 9, die Einerstelle von 10 subtrahieren.
	\end{block}
	
	\begin{equation*} 1000 - 852 = ? \end{equation*}
	\begin{equation*} 1000 - 753 = ? \end{equation*}
\end{frame}
