%	STRATEGIEN
%-------------------------------------------
%--------STRATEGIEN FUNKTIONSWEISE
\begin{frame}{Strategien}
	\begin{block}{Funktionsweise}
	\begin{itemize}
		\item Schwieriges einfach machen.
		\item Rechenregeln kennen, anwenden, ausnützen.
		\item \alert{Mathematisch korrekt!}
	\end{itemize}
	\end{block}
	\begin{block}{Ziel}
		Einen möglichst geschickten Rechenweg kreieren.
	\end{block}
\end{frame}
%--------STRATEGIEN ALLGEMEINE BEISPIELE
\begin{frame}{Strategien}
	\begin{block}{Beispiele}
	\begin{itemize}
		\item Reihenfolge von Summanden bzw. Faktoren verändern.
		\item Grosse Zahlen in kleinere aufteilen.
		\item Unbekanntes durch Bekanntes ersetzen.
	\end{itemize}
	\end{block}
\end{frame}
%-----------STRATEGIEN BEISPIELE
\begin{frame}{Strategien: Beispiele}
\Huge
	\begin{equation*}  158 + 394 = ? \end{equation*}
	\begin{equation*} 1000 - 381 = ? \end{equation*}
	\begin{equation*} 21 \cdot 14 = ? \end{equation*}
\end{frame}
%-------------------------------------
% HINÜBERSCHIEBEN
%---------------------------------------
\begin{frame}{Strategie: Addition}
	\begin{block}{Hinüberschieben}
		Von einem Summanden einen Betrag abziehen und beim anderen Summanden hinzuzählen.
	\end{block}
	\huge \begin{equation*} 158 + 394 = ?\end{equation*}
	\begin{equation*} (158 \textcolor{red}{- 6}) + (394 \textcolor{red}{+ 6}) = ? \end{equation*}
	\begin{equation*} 152 + 400 = 552  \end{equation*}
\end{frame}
%-----------------------------------------
% SUBTRAKTION VON 1000
%-----------------------------------------
\begin{frame}{Strategie: Subtraktion}
	\begin{block}{Subtraktion von 1000}
	Alle Stellen von 9, die Einerstelle von 10 subtrahieren.
	\end{block}
	\huge \begin{equation*} 1000 -  \textcolor{ProcessBlue}{3}\textcolor{green}{8}\textcolor{orange}{1} =? \end{equation*} \normalsize
	\begin{table}
	\begin{tabular}{l  c | c | c}
	 &  & Subtrahieren von: & Ergibt:  \\
	 Hunderterstelle: 	& \textcolor{ProcessBlue}{3} 	& 9 	& 6	\\
	 Zehnerstelle: 		& \textcolor{green}{8}		& 9 	& 1	\\
	 Einerstelle:  		& \textcolor{orange}{1} 		& 10	& 9	\\
	\end{tabular}
	\end{table}
\end{frame}
%-----------------------------------------
% SUMMEN BILDEN
%-----------------------------------------
\begin{frame}{Strategien: Multiplikation}
	\begin{block}{Summen bilden}
		Einen Faktor in eine Summe umwandeln, um die Multiplikation in Teilschritte aufzuteilen.
	\end{block}
	
	\huge \begin{equation*} 21 \cdot 14 = ?\end{equation*}
	\begin{equation*} (20 + 1) \cdot 14 = ? \end{equation*}
	\begin{equation*} 280 + 14 = 294 \end{equation*}
\end{frame}
